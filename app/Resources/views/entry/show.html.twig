{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entry</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entry.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entry.status }}</td>
            </tr>
            <tr>
                <th>Datefrom</th>
                <td>{% if entry.dateFrom %}{{ entry.dateFrom|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateto</th>
                <td>{% if entry.dateTo %}{{ entry.dateTo|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entry_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entry_edit', { 'id': entry.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
